    public static int maxPyramidLayers(int N){
        if(N <= 0){
            return 1;
        }
        int result = 0;
        while(true){
            int currentBricks = (result * (result + 1) * (2 * result + 1)) / 6;
            int nextBricks = ((result + 1) * (result + 2) * (2 * result + 3)) / 6;
            if(currentBricks <= N && N < nextBricks){
                break;
            }
            result=result+1;
        }
        return result;
    }
